<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.agilea.integration</groupId>
  <artifactId>wtms2wb</artifactId>
  <name>WTMS2WB</name>
  <version>1.0.0</version>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>2.4.1</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <transformers>
                <transformer />
                <transformer>
                  <manifestEntries>
                    <Main-Class>com.agilea.integration.wb.Main</Main-Class>
                    <Class-Path>/</Class-Path>
                  </manifestEntries>
                </transformer>
                <transformer>
                  <resource>META-INF/spring.handlers</resource>
                </transformer>
                <transformer>
                  <resource>META-INF/spring.schemas</resource>
                </transformer>
                <transformer>
                  <resource>META-INF/spring.tooling</resource>
                </transformer>
              </transformers>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>exec-maven-plugin</artifactId>
        <version>1.2.1</version>
        <configuration>
          <mainClass>com.agilea.integration.wb.Main</mainClass>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <properties>
    <springframework.version>4.0.6.RELEASE</springframework.version>
    <springbatch.version>3.0.1.RELEASE</springbatch.version>
    <spring.integration.version>4.1.5.RELEASE</spring.integration.version>
    <log4j.version>1.2.17</log4j.version>
    <joda-time.version>2.3</joda-time.version>
    <mysql.version>5.1.31</mysql.version>
  </properties>
</project>

